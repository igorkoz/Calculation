@model Calculations.Models.CalculationResult
@{  Layout = "_Layout"; }
<link href="~/css/index.css" rel="stylesheet" />
<div class="main">
    <form id="calcform" asp-action="Calculation" method="post">
        <div class="form-group">
            <label for="OperationName">OperationName:</label>
            <select class="form-control" name="OperationName">
                <option value="0">Select an Operation:</option>
                <option value="Add">Add</option>
                <option value="Multiply">Multiply</option>
                <option value="Exp">Exp</option>
                <option value="Square">Square</option>
                <option value="Compare">Compare</option>
            </select>
        </div>
        <div class="form-group">
            <label for="num1">num1:</label>
            <input class="form-control" name="num1" />
        </div>
        <div class="form-group">
            <label for="num2">num2:</label>
            <input class="form-control" name="num2" />
        </div>
        <div class="text-center panel-body">
            <button type="submit" class="btn btn-sm btn-primary">Calculate</button>
        </div>
    </form>
</div>
<div>
    <table class="table table-condensed table-striped table-bordered">
        <thead><tr><th>Result ID</th><th>Get button</th><th>Result Preview</th></tr></thead>
        <tbody>
        </tbody>
    </table>
</div>
